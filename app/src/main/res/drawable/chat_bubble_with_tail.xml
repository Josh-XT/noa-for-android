<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Chat bubble shape -->
    <item
        android:bottom="10dp"
        android:left="-10dp"
        android:right="10dp"
        android:top="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#57c7a9" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Message tail (pointer) -->
    <item
        android:bottom="-6dp"
        android:left="240dp"
        android:right="0dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#57c7a9" />
                <size android:width="12dp" android:height="12dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
