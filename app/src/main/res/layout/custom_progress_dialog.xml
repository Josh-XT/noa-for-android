<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"

android:layout_marginBottom="20dp"
android:background="@drawable/square_white_background">
<TextView
    android:id="@+id/deviceClose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="@string/device_close"
    android:lineSpacingExtra="-16sp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:gravity="center_horizontal|center_vertical"
    />
<ImageView
    android:id="@+id/logoBtn"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:scaleType="centerCrop"
    android:layout_below="@+id/deviceClose"
    android:layout_centerHorizontal="true"
    android:src="@drawable/logo_button"/>

<RelativeLayout
    android:id="@+id/searchBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logoBtn"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/square_gray_background">
    <TextView
        android:id="@+id/popUpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/searching"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal|center_vertical"
        />

</RelativeLayout>

</RelativeLayout>