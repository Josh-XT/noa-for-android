<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Transparent AppBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/transparentAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="@dimen/_35pxh"
            android:layout_height="@dimen/_35pxh"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_50" /> <!-- Replace with your back arrow drawable -->

    </androidx.appcompat.widget.Toolbar>

    <!-- Your content for the full-screen popup goes here -->
    <!-- Example content: An ImageView -->
    <ImageView
        android:id="@+id/fullScreenImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

</FrameLayout>